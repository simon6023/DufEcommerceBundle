{% extends 'DufAdminBundle:Default:index.html.twig' %}

{% block main %}
	<div class="row">
		<form name="duf_admin_create_form" action="{{ path('duf_admin_ecommerce_currencies_add_territories_save', { currency_code: currency.code }) }}" method="post">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">{{ 'ecommerce.territories' | trans }} for currency "{{ currency_name }}" ({{ currency.code }})</h3>

						<div class="pull-right box-tools">
							<a href="{{ path('duf_admin_ecommerce_currencies') }}">
								<p class="btn btn-default">Cancel</p>
							</a>

							<button class="btn btn-primary" id="save_btn">Save</button>
						</div>
					</div>

					<div class="box-body">
						<div class="ecommerce-territories-container">
							{% for territory in territories %}
								{% set is_selected = false %}

								<div class="ecommerce-territory">
									<input type="checkbox" name="territories[]" value="{{ territory.country_code }}" id="{{ territory.country_code }}" {% if is_selected %}checked{% endif %}>
									<label for="{{ territory.country_code }}">{{ territory.country_name }}</label>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
{% endblock %}